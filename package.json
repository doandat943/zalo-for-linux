{
  "name": "zalo-for-linux",
  "version": "1.0.0",
  "description": "Unofficial Zalo port for Linux with ZaDark integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "node scripts/build.js",
    "download-dmg": "node scripts/download-dmg.js",
    "prepare-app": "node scripts/prepare-app.js",
    "prepare-zadark": "node scripts/prepare-zadark.js",
    "setup": "npm install && npm run download-dmg && npm run prepare-zadark && npm run prepare-app"
  },
  "keywords": [
    "zalo",
    "zadark",
    "chat",
    "messaging",
    "linux"
  ],
  "author": "doandat943",
  "license": "MIT",
  "homepage": "https://github.com/doandat943/zalo-for-linux",
  "repository": {
    "type": "git",
    "url": "https://github.com/doandat943/zalo-for-linux.git"
  },
  "bugs": {
    "url": "https://github.com/doandat943/zalo-for-linux/issues"
  },
  "devDependencies": {
    "@electron/asar": "^3.2.10",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "node-html-parser": "^7.0.1"
  },
  "build": {
    "appId": "com.zalo.linux",
    "productName": "Zalo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "assets/**/*"
    ],
    "extraFiles": [
      {
        "from": "app",
        "to": "app",
        "filter": [
          "**/*",
          "!node_modules",
          "!package-lock.json"
        ]
      }
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "linux": {
      "target": "AppImage",
      "category": "Network",
      "synopsis": "Zalo messaging app for Linux",
      "description": "Unofficial port of Zalo messaging application for Linux systems.",
      "icon": "app/pc-dist/favicon-512x512.png"
    }
  }
}
